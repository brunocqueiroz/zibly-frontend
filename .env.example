# Zibly Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# AWS CONFIGURATION (for Secrets Manager)
# ============================================
# Stripe secrets are loaded from AWS Secrets Manager
# The secret "zibly-stripe-keys" contains:
#   - STRIPE_PUBLISHABLE_KEY
#   - STRIPE_SECRET_KEY
#   - STRIPE_WEBHOOK_SECRET

AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1

# ============================================
# OPTIONAL: Local Development Override
# ============================================
# If AWS Secrets Manager is not available, you can set these directly:
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# Note: NEVER commit these to git!

# ============================================
# STRIPE PRICE IDs
# ============================================
# Create these in your Stripe Dashboard under Products > Prices
NEXT_PUBLIC_STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_id
NEXT_PUBLIC_STRIPE_PRICE_STARTER_ANNUAL=price_starter_annual_id
NEXT_PUBLIC_STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_professional_monthly_id
NEXT_PUBLIC_STRIPE_PRICE_PROFESSIONAL_ANNUAL=price_professional_annual_id

# ============================================
# APP CONFIGURATION
# ============================================

# Public app URL (used for Stripe redirects)
NEXT_PUBLIC_APP_URL=https://zibly.ai

# ============================================
# BACKEND API
# ============================================

# Backend API URL
BACKEND_API_URL=https://1ce20ayeb1.execute-api.us-east-1.amazonaws.com/zibly

# Backend API key for internal calls
BACKEND_API_KEY=your_internal_api_key

# ============================================
# EXISTING CONFIGURATION
# ============================================

# API configuration (already in use)
NEXT_PUBLIC_API_BASE_URL=https://1ce20ayeb1.execute-api.us-east-1.amazonaws.com/zibly
NEXT_PUBLIC_API_KEY=zibly-dev-key-2024

# AWS S3 (for file uploads) - can reuse the same credentials above
AWS_S3_BUCKET_NAME=your_bucket_name

# Google OAuth
GOOGLE_CLIENT_ID=35052775836-1i8tiiui0vb11vvbu4gj964apst130v1.apps.googleusercontent.com
